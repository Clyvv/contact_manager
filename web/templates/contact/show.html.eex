<h2>Show Contact</h2>

<ul>

<li>
    <strong>Title:</strong>
    <%= @contact.title.title %>
  </li>

  <li>
    <strong>Name:</strong>
    <%= @contact.firstname %>
  </li>

  <li>
    <strong>Lastname:</strong>
    <%= @contact.lastname %>
  </li>

</ul>

<span><%= link "Edit", to: contact_path(@conn, :edit, @contact) %></span>
<span><%= link "Back", to: contact_path(@conn, :index) %></span>